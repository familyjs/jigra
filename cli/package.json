  "dependencies": {
    "@navify/cli-framework-output": "^2.2.6",
    "@navify/utils-fs": "^3.1.6",
    "@navify/utils-subprocess": "^2.1.11",
    "@navify/utils-terminal": "^2.3.3",
    "commander": "^9.3.0",
    "debug": "^4.3.4",
    "env-paths": "^2.2.0",
    "kleur": "^4.1.4",
    "native-run": "^1.6.0",
    "open": "^8.4.0",
    "plist": "^3.0.5",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "tar": "^6.1.11",
    "tslib": "^2.4.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^26.0.4",
    "@types/plist": "^3.0.2",
    "@types/prompts": "^2.0.14",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.10",
    "@types/tar": "^6.1.1",
    "@types/tmp": "^0.2.3",
    "@types/xml2js": "0.4.5",
    "jest": "^26.1.0",
    "tmp": "^0.2.1",
    "ts-jest": "^26.1.3",
    "typescript": "~4.1.2"
